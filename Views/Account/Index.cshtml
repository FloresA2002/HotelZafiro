@model PersonaModel

@{
    ViewData["Title"] = "Login";
    Layout = "LayoutLogin";
    var alertMessage = ViewBag.AlertMessage;
}

@if (!string.IsNullOrEmpty(alertMessage))
{
    <script>
        alert('@alertMessage');
    </script>
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Iniciar Sesión / Registrarse | Nothing4us</title>
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css'>
  <link rel='stylesheet' href='https://unicons.iconscout.com/release/v2.1.9/css/unicons.css'>
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
<div class="section">
    <div class="container">
        <div class="row full-height justify-content-center">
            <div class="col-12 text-center align-self-center py-5">
                <div class="section pb-5 pt-5 pt-sm-2 text-center">
                    <h6 class="mb-0 pb-3">
                        <span>INICIAR SESIÓN</span>
                        <span>REGÍSTRESE</span>
                    </h6>
                    <input class="checkbox" type="checkbox" id="reg-log" name="reg-log"/>
                    <label for="reg-log"></label>
                    <div class="card-3d-wrap mx-auto">
                        <div class="card-3d-wrapper">
                            <div class="card-front">
                                <div class="center-wrap">
                                    <div class="section text-center">
                                        <h4 class="mb-4 pb-3 hotel-title">HOTEL ZAFIRO</h4>
                                        <form method="post" asp-action="Index">
                                            <div class="form-group">
                                                    <input type="email" asp-for="Correo" class="form-style" placeholder="Su Correo electrónico" autocomplete="off" value="diegohidrobo11@gmail.com">
                                                <i class="input-icon uil uil-at"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password" asp-for="Clave" class="form-style" placeholder="Su Contraseña" autocomplete="off" value="123">
                                                <i class="input-icon uil uil-lock-alt"></i>
                                            </div>
                                            <button type="submit" class="btn mt-4">ENVIAR</button>
                                            <p class="mb-0 mt-4 text-center"><a href="#0" class="link">¿Olvidó su contraseña?</a></p>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="card-back">
                                <div class="center-wrap">
                                    <div class="section text-center">
                                        <h4 class="mb-4 pb-3">REGÍSTRESE</h4>
                                        <form>
                                            <div class="form-group">
                                                <input type="text" asp-for="Nombre" class="form-style" placeholder="Su Nombre completo" autocomplete="off">
                                                <i class="input-icon uil uil-user"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="email" asp-for="Correo" class="form-style" placeholder="Su Correo electrónico" autocomplete="off">
                                                <i class="input-icon uil uil-at"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password" asp-for="Clave" class="form-style" placeholder="Su Contraseña" autocomplete="off">
                                                <i class="input-icon uil uil-lock-alt"></i>
                                            </div>
                                            <button type="submit" class="btn mt-4">ENVIAR</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
